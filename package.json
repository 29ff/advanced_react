{
  "name": "advanced_react",
  "version": "1.0.0",
  "description": "Advanced React",
  "main": "lib/server.js",
  "repository": "git@github.com:29ff/advanced_react.git",
  "author": "29FF <nbhung1809@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "NODE_PATH=./lib pm2 --interpreter babel-node start ./lib/server.js --watch",
    "stop": "pm2 stop all",
    "build": "webpack --progress --colors --watch --config webpack.config.js",
    "test": "yarn jest",
    "test:clean": "rimraf ./coverage",
    "coverage": "yarn test:clean && yarn jest --coverage"
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/lib/__mocks__/fileMock.js",
      "\\.(css|less|styl|scss|sass)$": "<rootDir>/lib/__mocks__/styleMock.js"
    }
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.21.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "css-loader": "^0.28.7",
    "extract-text-webpack-plugin": "^3.0.2",
    "jest": "^21.2.1",
    "node-sass": "^4.7.2",
    "pm2": "^2.9.1",
    "react-test-renderer": "^16.2.0",
    "rimraf": "^2.6.2",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.19.1"
  },
  "dependencies": {
    "axios": "^0.17.1",
    "ejs": "^2.5.7",
    "express": "^4.16.2",
    "moment": "^2.19.4",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "webpack": "^3.10.0"
  }
}
